#include <stdio.h> //Cabeçalho da biblioteca padrão do C.
#include <string.h> //Biblioteca do C que permite manipulação de String.

  struct pessoa { //Estrutura de dados simples que vai armazenar as informações do usuario.

  char nome[99], emprego[99]; //Variaveis de tipo char, simulando String.
  int cpf,rg; //Variaveis para numeros simples.
  float salario; //Variavel para o salario que tera numeros com ponto flutuante.

  }; //Fim da struct.

int main() {//Função principal.

  struct pessoa eu; //Utilizando a estrutura pessoa para definir eu.
  
  strcpy(eu.nome, "Rafael Raniere de Oliveira"); //Usando a função strcpy eu consigo alocar meu nome completo para a variavel nome.
  
  printf("Cartão de Credito Bundesco\n\nVantagens: \tZero anuidade\n\t\t\tMilhas aereas\n\t\t\tPague boletos\n\t\t\tDescontos exclusivos");

  printf("\n\nSeja bem vindo %s", eu.nome); //Imprimindo uma variavel da estrutura.
  
  return 0;
}
